<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="color" type="app.appworks.school.stylish.data.Color"/>
        <variable name="viewHolder2" type="app.appworks.school.stylish.coloranalysis.ColorAnalysisAdapter2.ColorViewHolder"/>
        <variable name="viewModel" type="app.appworks.school.stylish.coloranalysis.ColorAnalysisViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_add2cart_color"
            android:layout_width="@dimen/size_add2cart_select"
            android:layout_height="@dimen/size_add2cart_select"
            android:clickable="@{!viewHolder2.isSelected}"
            android:onClick="@{() -> viewModel.selectColor2(color, viewHolder2.adapterPosition)}">

        <ImageView
                android:id="@+id/image_add2cart_color"
                android:layout_width="@dimen/size_add2cart_select"
                android:layout_height="@dimen/size_add2cart_select"
                android:background="@drawable/ic_placeholder"
                android:scaleType="centerCrop"
                app:color="@{color}"
                app:selected="@{viewHolder2.isSelected}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_placeholder"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>